@model Vidly.ViewModel.RandomMovieViewModel

@{
    ViewBag.Title = "RandomMovies";
}

@{
    var className = @Model.Customers.Count > 1 ? "popular" : null;
}

<h2 class=@className>@Model.Movie.Name</h2>

@if (@Model.Customers != null && @Model.Customers.Count == 0)
{
    <p>No one has rented this movie before</p>
}
else
{
    <ul>
        @foreach (var customer in @Model.Customers)
        {
            <li> @customer.Name</li>
        }
    </ul>
}